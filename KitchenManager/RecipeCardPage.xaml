<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitchenManager.RecipeCardPage"
             Title="RecipeCardPage">
    <Grid RowDefinitions="1*, 1*, 10*, 1*">
        <ScrollView Grid.Row="2">
            <VerticalStackLayout>
                <Image x:Name="Image_RecipeImage" WidthRequest="100"/>
                <Label x:Name="Label_RecipeLabel"/>
                <Label x:Name="Label_RecipeSourceName"/>
                <Label x:Name="Label_RecipeSourceURL"/>
                <Label x:Name="Label_RecipeYield"/>
                <ListView x:Name="ListView_Ingredients" />
                <Label x:Name="Label_RecipeID" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>