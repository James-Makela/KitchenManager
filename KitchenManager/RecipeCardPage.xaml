<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitchenManager.RecipeCardPage"
             Title="RecipeCardPage">
    <Grid RowDefinitions="1*, 1*, 1*, 3*, 1*, 3*, 2*, 1*, 1*"
      ColumnDefinitions="1*, 1*"
      BackgroundColor="#0d1b2a"
      RowSpacing="0">

        <!-- Header -->
        <Label Text="Recipe Card"
               Grid.Row="0"
               Grid.ColumnSpan="2"
               FontSize="25"
               TextColor="WhiteSmoke"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>

        <!-- Tabs -->
        <Border Stroke="#d9d9d9"
                StrokeShape="RoundRectangle 10, 10, 0, 0"
                Background="#d9d9d9"
                Grid.Row="1"
                Grid.ColumnSpan="2" />
        <Border x:Name="Border_Ingredients"
                Padding="0"
                Stroke="#415a77"
                StrokeShape="RoundRectangle 10, 10, 0, 0"
                Background="#415a77"
                Grid.Row="1"
                Grid.Column="0">
            <Button x:Name="Button_Ingredients"
                    Text="Ingredients"
                    CornerRadius="10"
                    Background="Transparent"
                    TextColor="#d9d9d9"/>
        </Border>
        <Border x:Name="Border_Nutrition"
                Padding="0"
                Stroke="#d9d9d9"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 10, 10, 0, 0"
                Background="#d9d9d9"
                Grid.Row="1"
                Grid.Column="1">
            <Button x:Name="Button_Nutrition"
                    Text="Nutrition"
                    CornerRadius="10"
                    Background="Transparent"
                    TextColor="#415a77"/>
        </Border>
        
        <!-- Main Background-->
        <Border Margin="-2"
                StrokeThickness="2"
                Stroke="#415a77"
                Background="#415a77"
                Grid.Row="2"
                Grid.RowSpan="6"
                Grid.ColumnSpan="2" />

        <Border Stroke="#d9d9d9"
                StrokeShape="RoundRectangle 20"
                BackgroundColor="#d9d9d9"
                Grid.Row="2"
                Grid.Column="1"
                HorizontalOptions="FillAndExpand"
                Margin="5">
            <HorizontalStackLayout>
                <Button x:Name="Button_DecreaseYield" Text="-" Pressed="Button_DecreaseYield_Pressed"/>
                <Label x:Name="Label_RecipeYield" Grid.Row="2" Grid.Column="1" VerticalOptions="Center" Margin="20, 0"/>
                <Button x:Name="Button_IncreaseYield" Text="+" Pressed="Button_IncreaseYield_Pressed"/>
            </HorizontalStackLayout>
        </Border>
        

        <Border Stroke="Transparent"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 30"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                HorizontalOptions="Center"
                WidthRequest="130"
                HeightRequest="130">
            <Image x:Name="Image_RecipeImage"/>
        </Border>
        
        <Label x:Name="Label_RecipeLabel"
               HorizontalOptions="Center"
               Grid.Row="4"
               Grid.ColumnSpan="2"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="#d9d9d9"/>

        <!-- Background for ingredients -->
        <Border x:Name="Border_TableView" 
                Stroke="#c5c4c4"
                StrokeShape="RoundRectangle 10"
                Background="#c5c4c4"
                Grid.Row="5"
                Grid.ColumnSpan="2"
                Margin="10, 0, 10, 0">
            <ListView x:Name="ListView_Ingredients" BackgroundColor="#d9d9d9"/>
        </Border>
        
        <!-- Background for Costing -->
        <Border x:Name="Border_Costs" Stroke="#c5c4c4"
        StrokeShape="RoundRectangle 10"
        Background="#c5c4c4"
        Grid.Row="6"
        Grid.ColumnSpan="2"
        Margin="10">
        </Border>
        
        <!-- Background for link -->
        <Border x:Name="Border_CollectionView" Stroke="#c5c4c4"
        StrokeShape="RoundRectangle 50"
        Background="#c5c4c4"
        Grid.Row="7"
        Grid.ColumnSpan="2"
        Margin="10, 0, 10, 10">
            <Label x:Name="Label_RecipeSourceName" VerticalOptions="Center" Margin="10"/>
        </Border>
    </Grid>
</ContentPage>