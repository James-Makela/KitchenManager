<?xml version="1.0" encoding="utf-8" ?>
<base:FramePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:base="clr-namespace:KitchenManager"
             xmlns:local="clr-namespace:KitchenManager.Models"
             x:Class="KitchenManager.InventoryPage"
             Title="InventoryPage">
    <ContentPage.Content>
        <ContentView>
            <VerticalStackLayout>
                <CollectionView x:Name="CollectionView_Stock"
                SelectionMode="Single"
                ItemSizingStrategy="MeasureFirstItem"
                SelectionChanged="CollectionView_Stock_SelectionChanged">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="local:InventoryItem">
                            <Border Margin="5"
                    Padding="10"
                    Stroke="#d9d9d9"
                    StrokeShape="RoundRectangle 5, 5, 5, 5"
                    Background="#d9d9d9"
                    MinimumHeightRequest="60">
                                <Grid ColumnDefinitions="1*, 1*, 1*, 1*" 
                      RowDefinitions="1*, 2*">
                                    <Label Text="{Binding ItemName, Mode=OneWay}"
                           Grid.ColumnSpan="3" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Button x:Name="Button_Add_Stock" Text="Add" Pressed="Button_Add_Stock_Pressed" VerticalOptions="End"/>
            </VerticalStackLayout>
        </ContentView>
    </ContentPage.Content>
</base:FramePage>